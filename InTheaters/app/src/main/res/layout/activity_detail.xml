<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/detail_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Movie"
            android:paddingBottom="20dp"
            android:layout_gravity="center_horizontal"
            android:textSize="50sp"/>

        <TextView
            android:id="@+id/detail_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Rating"
            android:textSize="40sp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="25dp"
        android:contentDescription="@string/movie_poster_str"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/buy_tickets"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/plot_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Plot"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/runtime_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Runtime"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/director_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Director"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/genres_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Genres"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/stars_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Stars"
            android:textSize="25sp"/>

    </LinearLayout>

</LinearLayout>